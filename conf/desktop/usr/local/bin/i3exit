#!/bin/bash

before_lock() {
  setxkbmap -layout us; sleep 0.2; setxkbmap -layout us,ru  # reset keyboard layout to english, works only with sleep
  py3-cmd refresh keyboard_layout
  killall compton
  usbguard set-parameter InsertedDevicePolicy reject
  sudo systemctl stop pcscd.service
}

after_lock() {
  usbguard set-parameter InsertedDevicePolicy apply-policy
  compton & disown
}

case "$1" in
  lock)
    before_lock
    xsecurelock
    after_lock
    ;;
  logout)
    stop_vpn
    i3-msg exit
    ;;
  suspend)
    before_lock
    systemctl suspend
    xsecurelock
    after_lock
    ;;
  reboot)
    stop_vpn
    systemctl reboot
    ;;
  shutdown)
    stop_vpn
    systemctl poweroff
    ;;
  *)
    echo "Usage: $0 {lock|logout|suspend|reboot|shutdown}"
    exit 2
esac

exit 0
