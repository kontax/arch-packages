#!/bin/sh

check() {
    [ ! -d "$HOME/.mail" ] && return

    notmuch new > /dev/null
    count="$(notmuch count 'tag:unread')"
    tooltip="There are $count new emails"
    if [ "$count" = "0" ]; then
        printf '{"text": ""}\n'
    else
        printf "{\"text\": \"<span foreground='#928374'>ïƒ </span> %s\", \"tooltip\": \"%s\"}\n" "$count" "$tooltip"
    fi
    inotifywait -q -e move -e create -e delete "$HOME/.mail/maximbaz/INBOX/cur" > /dev/null
    check
}

check
